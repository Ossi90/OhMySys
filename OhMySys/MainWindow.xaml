<Window x:Class="OhMySys.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        Title="Tray App" Height="400" Width="300">
    <Window.Resources>
        <ContextMenu x:Key="NotifierContextMenu">
            <MenuItem Header="Exit" Click="Exit_Click" />
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90*" />
            <ColumnDefinition Width="149*" />
            <ColumnDefinition Width="61*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="3">
            <TextBlock Text="Hello, this is a tray application!"
                       Margin="10"
                       FontSize="16"
                       HorizontalAlignment="Center" />
            <Button Content="Button 1" Margin="10" />
            <Button Content="Button 2" Margin="10" />
        </StackPanel>
    </Grid>
</Window>